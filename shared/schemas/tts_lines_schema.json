{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TTS Lines Schema",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "text", "speaker"],
    "properties": {
      "id": {"type": "string"},
      "text": {"type": "string"},
      "speaker": {"type": "string"},
      "pace": {"type": "string"},
      "emphasis": {
        "type": "array",
        "items": {"type": "string"},
        "default": []
      }
    },
    "additionalProperties": false
  }
}