{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Asset Manifest Schema",
  "type": "object",
  "patternProperties": {
    ".*": {
      "type": "object",
      "required": ["bg", "chars", "props"],
      "properties": {
        "bg": {"type": "string"},
        "chars": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "pose"],
            "properties": {
              "id": {"type": "string"},
              "pose": {"type": "string"}
            },
            "additionalProperties": false
          },
          "default": []
        },
        "props": {
          "type": "array",
          "items": {"type": "string"},
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}